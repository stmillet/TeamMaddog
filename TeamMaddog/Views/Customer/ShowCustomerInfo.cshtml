@model IEnumerable<TeamMaddog.Models.Customer>

@{
    ViewBag.Title = "ShowCustomerInfo";
}

<h2>Show Customer Information</h2>
<!-- this displays all the customer info-->
<p>
    @Html.ActionLink("Add Customer", "AddCustomerInfo")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Customer_Code)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Customer_FName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Customer_LName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Customer_Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cust_Street_Address)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cust_City)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cust_State)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cust_Zip)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Customer_Code)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Customer_FName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Customer_LName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Customer_Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cust_Street_Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cust_City)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cust_State)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cust_Zip)
            </td>
            <td>
                @Html.ActionLink("Edit", "EditCustomerInfo", new { iCode = item.Customer_Code })
            </td>
        </tr>
    }
    <!--action link back to the home page-->
    @Html.ActionLink("Back to Home", "Index", "Home")
</table>
